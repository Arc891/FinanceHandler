# Environment variables for the Discord Finance Bot
# Copy this to .env and fill in your actual values

# Discord Bot Token (get from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Channel ID for daily reminders (right-click channel > Copy ID)
REMINDER_CHANNEL_ID=your_channel_id_here

# Daily reminder time in 24-hour format (HH:MM)
DAILY_REMINDER_TIME=09:00

# Timezone for reminder scheduling (e.g., Europe/Brussels, America/New_York)
TZ=Europe/Brussels

# Google Sheets Integration
GOOGLE_SHEETS_ENABLED=true
GOOGLE_CREDENTIALS_PATH=src/config/google_service_account.json
GSHEET_NAME="Test Automation Sheet"
GSHEET_TAB="Blad1"

# Sheet Layout Configuration
# The row number where transaction data starts (after headers)
# For simple sheets with headers in row 1: use 2
# For complex sheets with instructions/headers: use appropriate row number
GSHEET_EXPENSE_START_ROW=2
GSHEET_INCOME_START_ROW=2

# Additional configuration can be added here
